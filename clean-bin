# Variables

readonly VERSION="v2.0.1"
readonly UPDATED="17 Sep 2019"

# Directory variables

readonly HOMEDIR=$HOME
readonly CURDIR=$PWD
readonly BINDIR="$HOMEDIR/bin"
readonly SCRIPTDIR="$HOMEDIR/Documents/mosfanet/Scripts/bash/my-scripts/"

# Functions

remove_tilde()
{
  find . -maxdepth 2 -type f -iname \*~ -print -exec rm {} \;
}

clear

# Change directory to ~/bin

[ "$CURDIR" != "$BINDIR" ] && pushd "$BINDIR" > /dev/null 2>&1

echo "Clean-bin v$VERSION (Updated $UPDATED)"
echo "Cleaning up $BINDIR ..."

# Remove backup files ending with *~

NBU=$(find ./ -type f -name \*~  | wc -l)

if (( NBU == 0 )); then
  echo $'\n'$"No backup files ending with '~' found in $BINDIR."
elif (( NBU == 1 )); then
  echo $'\n'$"Removing $NBU '~' backup file in $BINDIR."
  remove_tilde
else
  echo $'\n'$"Removing $NBU '~' backup files in $BINDIR."
  remove_tilde
fi

# Synchronize ~/bin with ~/Documents/mosfanet/Scripts/bash/my-scripts

echo -e "\nSynchronizing ~/bin directory with the scripts backup directory.\n"
rsync -arv --delete --exclude 'Testing' . "$SCRIPTDIR/"
echo $'\n'$"~bin cleaned up and synchronized."

# Return to the directory where you started

[ "$CURDIR" != "$BINDIR" ] && popd > /dev/null 2>&1

exit
