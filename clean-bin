# with this program. If not, see <https://www.gnu.org/licenses/>.
###############################################################################

# Variables

HOMEDIR=$HOME
CURDIR=$PWD
BINDIR="$HOMEDIR/bin"
SCRIPTDIR="$HOMEDIR/Documents/mosfanet/Scripts/bash/my-scripts/"
VERSION="v1.2.1"
UPDATED="06 Sep 2019"

clear

# Change directory to ~/bin

[ "$CURDIR" != "$BINDIR" ] && pushd "$BINDIR" > /dev/null 2>&1

echo "Clean-bin v$VERSION (Updated $UPDATED)"
echo -e "Cleaning up $BINDIR directory...\n"

# Remove files ending with *~

NBU=$(find ./ -maxdepth 1 -type f -name \*~  | wc -l)

if (( NBU == 0 )); then
  echo "No '~' backup files ending with '~' found in $BINDIR."
elif (( NBU == 1 )); then
  echo "Removing $NBU '~' backup file from /$BINDIR."
  find . -maxdepth 1 -type f -iname \*~ -print -exec rm {} \;
else
  echo "Removing $NBU '~' backup files from $BINDIR."
  find . -maxdepth 1 -type f -iname \*~ -print -exec rm {} \;
fi

# Copy files that have been created or modified

echo $'\n'$"Backup files created or modified:"
OPTIONS=("Today" "In the last 24 hours" "In the last 2 days" "Exit the script")
PS3="Chose an option: "
select OPT in "${OPTIONS[@]}"
do
  case $OPT in
    "Today")
      echo $'\n'$"Files created or modified today:"
      find . -maxdepth 1 -type f -daystart -mtime -1 -print -exec cp -pu {} \
        "$SCRIPTDIR" \;
      echo "copied to $SCRIPTDIR"
      break
      ;;
    "In the last 24 hours")
      echo $'\n'$"Files created or modified in the last 24 hours:"
      find . -maxdepth 1 -type f -mtime -1 -print -exec cp -pu {} \
        "$SCRIPTDIR" \;
      echo "copied to $SCRIPTDIR"
      break
      ;;
    "In the last 2 days")
      echo $'\n'$"Files created or modified in the last 2 days:"
      find . -maxdepth 1 -type f -mtime -2 -print -exec cp -pu {} \
        "$SCRIPTDIR" \;
      echo "copied to $SCRIPTDIR"
      break
      ;;
    "Exit the script")
      echo "Exiting the script."
      break
      ;;
    *)
      echo "Invalid choice. Try again."
      ;;
  esac
done

# Return to the directory where you started

[ "$CURDIR" != "$BINDIR" ] && popd > /dev/null 2>&1

exit

