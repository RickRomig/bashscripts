## Variables ##

SCRIPT=$(basename "$0")
VERSION="1.0.2"
UPDATED="01 Sep 2019"

# Network interfaces

ETHINT=$(/usr/bin/nmcli dev | awk '/ethernet/ {print $1}')
WIFIINT=$(/usr/bin/nmcli dev | awk '/wifi/ {print $1}')

# IP addresses

PUBLICIP=$(/usr/bin/wget -qO- http://ipv4.icanhazip.com)
ETHIP=$(/sbin/ip -o -4 addr show | awk -v name="$ETHINT" '$0~name { print $4 }')
WIFIIP=$(/sbin/ip -o -4 addr show | awk -v name="$WIFIINT" '$0~name { print $4 }')

# Display IP Information

echo $'\n'$"IP Information"
echo "=============="
echo "Public IP:"
echo -e "\t$PUBLICIP"
echo "Local IP:"
if [ -n "$ETHINT" ] && [ -n "$ETHIP" ]; then
  echo -e "\tEthernet: $ETHIP"
elif [ -n "$ETHINT" ]; then
  echo -e "\tEthernet: Not connected"
fi
if [ -n "$WIFIINT" ] && [ -n "$WIFIIP" ]; then
  echo -e "\tWireless: $WIFIIP"
elif [ -n "$WIFIINT" ]; then
  echo -e "\tWireless: Not connected"
fi
echo "Default Gateway:"
/sbin/ip route | awk '/default/ { print "\t"$5":\t"$3 }'
echo "DNS Servers:"
/usr/bin/nmcli dev show | awk '/IP4.DNS/ { printf "\t%s\n",$2 }'
echo $'\n'$"$SCRIPT v$VERSION (Updated: $UPDATED)"

exit

