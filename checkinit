## Functions ##

find_init() {
	local file data
	if [[ "$(/usr/bin/ps -p 1 | awk '/1 ?/ {print $NF}')" == "systemd" ]]; then
		printf "SystemD"
	elif [[ $(/sbin/init --version 2>/dev/null | awk '{print $1}') == "SysV" ]]; then
		printf "SysV"
	elif [[ -f /sbin/openrc ]]; then
		printf "OpenRC"
	else
		file='/proc/1/comm'
		if [[ -r "$file" ]]; then
			read -r data < "$file"
			printf '%s' "${data%% *}"
	  else
	 		printf '?'
		fi
  fi
}

main() {
	local script version
	script=$(basename "$0")
	version="1.5.24284"
	printf "Init System: %s \n" "$(find_init)"
	printf "%s v%s\n" "$script" "$version"
	exit
}

## Execution ##

main "$@"
