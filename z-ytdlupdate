set -e

echo "$(date) $(youtube-dl -U)" >> /var/log/ytdlup.log

LINES=$(wc -l /var/log/ytdlup.log | awk '{ print $1 }')
if (( LINES > 30 )); then
  tail -n 30 /var/log/ytdlup.log > /var/log/ytdlup.tmp
  mv /var/log/ytdlup.tmp /var/log/ytdlup.log
fi

exit

