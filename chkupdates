set -e

update() {
  echo -e "\n\e[1;33mInstalling updates ...\e[0m"
  sudo apt full-upgrade -yy
}

clean() {
  echo -e "\n\e[1;33mCleaning up ...\e[0m"
  sudo apt autoclean
}

remove() {
  echo -e "\n\e[1;33mRemoving orphaned packages ...\e[0m"
  sudo apt autoremove -yy
}

alldone () {
  echo -e "\n\e[1;33mUpdate complete.\e[0m"
}

version="v1.1.2"

sudo ls > /dev/null 2>&1
clear
echo -e "\e[1;33mChkupdates $version\e[0m"
echo -e "\e[1;33mChecking for updates...\e[0m"
sudo apt update

# Without the 2>/dev/null, apt will display the following error message to STDERR:
# WARNING: apt does not have a stable CLI interface. Use with caution in scripts.

nupd=$(apt upgrade -s 2>/dev/null | grep -P '^\d+ upgraded' | cut -d" " -f1)

if [ "$nupd" -gt "0" ]; then
  apt list --upgradeable
  echo -e "\n\e[1;33mUpdate options:\e[0m"
  PS3="Choice: "
  options=("Install updates" "Install updates and clean up" \
           "Install updates and remove orphaned packages" \
           "Exit without updating")
  select opt in "${options[@]}"
  do
    case $opt in
      "Install updates")
        update
        alldone
        break
        ;;
      "Install updates and clean up")
        update
        remove
        clean
        alldone
        break
        ;;
      "Install updates and remove orphaned packages")
        update
        remove
        alldone
        break
        ;;
      "Exit without updating")
        echo -e "\n\e[1;33mUpdates not installed.\e[0m"
        break
        ;;
      *)
        echo -e "\e[1;31mInvalid option! Try again.\e[0m" >&2
        ;;
    esac
  done
fi

exit
